---
// Components
import BaseHead from '@components/BaseHead.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import { DEFAULT_LANG, ALLOW_ROBOTS } from '../constants';

const { title, description, image } = Astro.props;
---

<html class="scroll-smooth" lang={DEFAULT_LANG}>
	<head>
		<BaseHead title={title} description={description} image={image} allowRobots={ALLOW_ROBOTS} />
	</head>

	<body class="flex flex-col min-h-screen has-[.show-menu]:overflow-hidden">
		<Header />
		<main aria-label="Content">
			<slot />
		</main>
		<Footer />
	</body>	
	<script>
		import '../scripts/app.ts';
	</script>
</html>
