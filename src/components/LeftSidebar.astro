---
type SideBarType = {
  text: string;
  link?: string;
  header?: boolean;
};

type Props = {
  sidebar: SideBarType[];
  currentPage: string;
}

const { currentPage, sidebar } = Astro.props;
const currentPageMatch = currentPage.slice(1);

const isCurrentPage = (item: SideBarType) => {
	if (item.link) {
		return item.link.includes(currentPageMatch);
	}
	return false;
};

const getLinkClasses = (link: SideBarType) => {
	const baseClasses = 'block py-2 px-6 my-1 transition-colors border-l hover:border-slate-400 text-slate-500 hover:text-slate-900'

	if (isCurrentPage(link)) {
		return baseClasses + ' border-slate-500 text-slate-900';
	} else {
		return baseClasses;
	}
}
---
<aside title="Site Navigation" class="max-lg:bg-white rounded-e-xl lg:rounded-none">
	<nav aria-labelledby="grid-left" class="px-4 border-r w-64">
		<ul>
			{sidebar.map(item => (item.header ? 
				<h2 class="mt-4 font-semibold text-slate-700">{item.text}</h2> : 
				<li class={getLinkClasses(item)}>
					<a href={item.link}>{item.text}</a>
				</li>))}
		</ul>
	</nav>
</aside>

