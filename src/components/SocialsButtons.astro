---
import type { HTMLAttributes } from "astro/types";
import { Image } from 'astro:assets';

type Props = HTMLAttributes<"div">;

const { class: className, ...props } = Astro.props;
---

<div class:list={["socials flex flex-col", className]} {...props}>
  <ul class="flex gap-x-3">
    <li class="group">
      <a class="inline-flex bg-white/[0.2] rounded-full w-11 h-11" href="https://twitter.com/" target="_blank" rel="noopener noreferrer">
        <!-- <Image class="relative m-auto w-5 h-5 scale-100 group-hover:scale-90 transition-transform duration-500" src={import("/src/icons/twitter.svg")} alt="twitter" format="svg" /> -->
      </a>
    </li>
    <li class="group">
      <a class="inline-flex bg-white/[0.2] rounded-full w-11 h-11" href="https://www.facebook.com/" target="_blank" rel="noopener noreferrer">
        <!-- <Image class="relative m-auto w-5 h-5 scale-100 group-hover:scale-90 transition-transform duration-500" src={import("/src/icons/facebook.svg")} alt="twitter" format="svg" /> -->
      </a>
    </li>
    <li class="group">
      <a class="inline-flex bg-white/[0.2] rounded-full w-11 h-11" href="https://www.linkedin.com/company/" target="_blank" rel="noopener noreferrer">
        <!-- <Image class="relative m-auto w-5 h-5 scale-100 group-hover:scale-90 transition-transform duration-500" src={import("/src/icons/linkedin.svg")} alt="twitter" format="svg" /> -->
      </a>
    </li>
  </ul>
</div>