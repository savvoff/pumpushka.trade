---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import DefaultLayout from '@layouts/Default.astro';
import Slider from '@components/Slider.astro';
import Article from '@components/Article.astro';
import MdContent from '@components/MdContent.astro';
import { useI18n } from '@utils/translate';
import { SITE_DESCRIPTION, SITE_TITLE, TRANSLATIONS } from 'src/constants';
import type { HomePageContent } from 'src/types';

import home from '../../content/pages/home.json';
const content = home as HomePageContent;

const lang = 'en';
const t = useI18n(lang);
const currTranslations = TRANSLATIONS[lang];

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
const advText = 'A PLACE FOR YOUR ADVERTISEMENT';
---

<DefaultLayout title={SITE_TITLE} description={SITE_DESCRIPTION} lang={lang}>
  <section id="hero" class="bg-gradient-to-b from-blue-100 to-blue-200 pt-28 pb-5 rounded-b-3xl min-h-96 overflow-hidden page-section">
    <div class="container">
      <div class="flex flex-col space-y-3">
        <div class="z-[1] relative space-y-2 sm:text-center">
          <h1 class="text-5xl/[0.9]">
            <MdContent content={ t(content.heroTitle) } />
          </h1>
          <p class="font-semibold text-white">{ t(content.heroSubtitle) }</p>
        </div>
        <div class="z-0 relative text-center">
          <div class="top-1/2 left-1/2 absolute -translate-x-1/2 -translate-y-1/2">
            <Image
              class="animate-[rotating-scale_60000ms_linear_forwards_infinite]"
              src={import("public/rays.svg")}
              format="svg"
              alt="Rays"
            />
          </div>
          <Image
            class="mx-auto w-auto max-h-72 animate-[flying_2000ms_ease-in-out_alternate_infinite]"
            src={import("public/dzen.png")}
            format="webp"
            alt="Dzen"
          />
        </div>
        <div class="text-center">
          <a class="sm:inline-flex top-0 hover:top-1 active:top-1 relative flex justify-center items-center gap-x-3 bg-black shadow-button shadow-orange-200 hover:shadow-none active:shadow-none p-9 rounded-3xl max-w-full font-black text-white tracking-wide transition-all" href={content.heroButtonUrl}>
            <span class="truncate">{ t(content.heroButtonText) }</span>
            <Icon name="telegram" class="shrink-0" size={32} />
          </a>
        </div>
      </div>
    </div>
  </section>

  <section id="skills" class="bg-black py-10 overflow-hidden page-section">
    <div class="mb-5 container">
      <div class="space-y-20">
        <Article class="text-white">
         <h2><MdContent content={ t(content.featuresTitle) } /></h2>
         <ul class="space-y-2">
          {content.features && content.features.map((item) => (
            <li class="flex items-center gap-3 bg-clip-padding bg-gradient-to-br from-gold/20 px-4 py-3 border-2 border-gold/20 rounded-xl">
              <span class="inline-flex bg-black border border-gold/30 rounded-full w-8 h-8 shrink-0">
                <Icon name="star" class="m-auto text-gold" size={18} />
              </span>
              { t(item) }
            </li>
          ))}
         </ul>
        </Article>

        <div class="relative flex flex-row-reverse justify-center">
          <Image
            class="-top-1/4 -left-1/4 absolute w-[150%] max-w-none h-[150%] object-contain"
            src={import("public/bg-charts.png")}
            format="webp"
            alt="Charts background"
          />
          <div class="shadow-card shadow-orange/50 border border-orange rounded-lg aspect-2/3 overflow-hidden rotate-12 -translate-y-10">
            <Image
              class="mx-auto w-auto max-h-72"
              src={import("public/short.jpg")}
              format="webp"
              alt="Short"
            />
          </div>
          <div class="shadow-card shadow-grass/50 border border-grass rounded-lg aspect-2/3 overflow-hidden -rotate-12 translate-y-6">
            <Image
              class="mx-auto w-auto max-h-72"
              src={import("public/long.jpg")}
              format="webp"
              alt="Long"
            />           
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="how-works" class="bg-orange py-10 rounded-3xl overflow-hidden page-section">
    <div class="container">
      <div class="flex flex-col">
        <h2 class="mb-6 text-4xl"><MdContent content={ t(content.howItWorksTitle) } /></h2>
        <div class="relative bg-dark mr-9 mb-28 border-10 border-black max-h-96 aspect-7/12">
          <video class="w-full h-full" controls preload="none" poster="/poster.jpg">
            <source src={content.howItWorksVideo} type="video/mp4">
          </video>
          <div class="right-0 bottom-0 absolute translate-x-1/2 translate-y-2/3 pointer-events-none">
            <Image
              class="mx-auto w-auto max-h-72"
              src={import("public/candle-finger.png")}
              format="webp"
              alt="Candle finger"
            />          
          </div>
        </div>
        <Article>
         <ul>
           {content.howItWorks && content.howItWorks.map((item) => (
            <li>{ t(item) }</li>
          ))}
         </ul>
        </Article>
      </div>
    </div>
  </section>

  <section id="test-free" class="bg-black py-10 page-section">
    <div class="container">
      <div class="flex flex-col space-y-8">
        <h2 class="text-white text-4xl">
          <Fragment set:html={ t(content.testTitle) } />
        </h2>
        <div class="text-center">
          <a class="sm:inline-flex top-0 hover:top-1 active:top-1 relative flex justify-center items-center gap-x-3 bg-blue shadow-button shadow-orange-200 hover:shadow-none active:shadow-none p-9 rounded-3xl max-w-full font-black text-white tracking-wide transition-all" href={ content.testButtonUrl }>
            <span class="truncate">{ t(content.testButtonText) }</span>
            <Icon name="telegram" class="shrink-0" size={32} />
          </a>
        </div>
      </div>
    </div>
  </section>

  <section id="tariffs" class="space-y-1 bg-black overflow-hidden page-section">
    <div class="bg-orange-200 py-1">
      <div class="block font-heading text-lg uppercase whitespace-nowrap animate-[marquee_20000ms_linear_alternate_infinite]">
        <Fragment set:html={ Array(12).fill(advText).join('&nbsp;&nbsp;&nbsp;') } />
      </div>
    </div>
    <div class="bg-blue py-8 rounded-2xl">
      <div class="container">
        <div class="flex flex-col">
          <h2 class="mb-4 text-5xl leading-none">{ t(content.tariffsTitle) }<span class="inline-block bg-orange-200 mx-1 px-2 py-1.5 rounded-full font-heading font-normal text-lg align-middle leading-none rotate-6">USDT</span></h2>
          <p class="mb-8 font-medium text-lg tracking-tight">{ t(content.tariffsSubTitle) }</p>
          <Slider options={JSON.stringify({ perPage: 1, width: '85%', gap: '-0.75rem', breakpoints: { 768: { perPage: 3, width: '100%', } } })}>
            {content.tariffs && content.tariffs.map((item) => (
            <li class="flex items-stretch bg-orange-200 p-3 last:rounded-e-3xl first:rounded-s-3xl splide__slide">
              <div class:list={["relative flex flex-col p-2 border-2 rounded-3xl", !item.isPopular ? 'bg-white' : 'bg-orange-300']}>
                <div class="right-0 bottom-0 absolute rounded-3xl overflow-hidden">
                  <div class="scale-125 translate-x-1/3 translate-y-1/4">
                    <Image
                      class="animate-[rotating_60000ms_linear_forwards_infinite]"
                      src={import("public/rays-orange.svg")}
                      format="svg"
                      alt="Rays"
                    />
                  </div>
                </div>
                <div class="z-[1] relative flex">
                  <div class:list={["-mt-6 mr-auto max-h-16", !item.isPopular ? 'hidden' : '']}>
                    <Image
                      class="w-full h-full object-contain"
                      src={import("public/best.png")}
                      format="webp"
                      alt="Best"
                    />    
                  </div>
                  <div class="-mt-14 ml-auto w-7/12 max-h-32 aspect-6/5">
                    <img
                      class="w-full h-full object-contain"
                      src={ item.image }
                      alt={ t(item.title) }
                    />    
                  </div>
                </div>
                <div class="z-[1] relative space-y-2 mb-6 px-2">
                  <p class="font-black text-5xl/none">
                    { item.price } <span class="font-semibold text-base">/{currTranslations.month}</span>
                  </p>
                  <div class="bg-orange-200/30 px-2 border border-orange-200 rounded-lg font-heading uppercase tracking-wider">
                    { t(item.title).split(' ')[0] } <span class="bg-none text-orange-200">{ t(item.title).split(' ')[1] }</span>
                  </div>
                  <div class="font-semibold">
                    <p class="mb-2 font-black leading-5">{ t(item.description) }</p>
                    <ul class="px-6 list-disc">
                      {item.benefits && item.benefits.map((item) => (
                        <li>{ t(item) }</li>
                      ))}
                    </ul>
                  </div>
                </div>
                <div class="z-[1] relative mt-auto text-center">
                  <a class="top-0 hover:top-1 active:top-1 relative flex justify-center items-center gap-x-3 bg-black shadow-button shadow-orange-200 hover:shadow-none active:shadow-none px-9 py-5 rounded-3xl max-w-full font-black text-white tracking-wide transition-all" href={item.buttonUrl}>
                    <img
                      class="-top-1/3 right-6 absolute w-10 h-auto rotate-12"
                      src={ item.buttonIcon }
                      alt={ t(item.title) }
                    /> 
                    <span class="truncate">{ t(item.buttonText) }</span>
                  </a>
                </div>
              </div>
            </li>
            ))}
        </div>
        <p class="my-2 font-medium text-lg tracking-tight">{ t(content.tariffsHint) }</p>
      </div>
    </div>
    <div class="bg-orange-200 py-1">
      <div class="block font-heading text-lg uppercase whitespace-nowrap animate-[marquee_20000ms_linear_alternate_infinite]">
        <Fragment set:html={ Array(12).fill(advText).join('&nbsp;&nbsp;&nbsp;') } />
      </div>
    </div>
  </section>

  <section id="faq" class="bg-black py-10 overflow-hidden page-section">
    <div class="top-0 left-0 absolute flex justify-between items-center gap-3 w-full h-full">
      <div class="py-3 h-full max-h-[80vh]">
        <Image
          class="w-auto h-full object-contain"
          src={import("public/bear.png")}
          format="webp"
          alt="Bear"
        />
      </div>
      <div class="py-3 h-full max-h-[80vh]">
         <Image
          class="w-auto h-full object-contain"
          src={import("public/bull.png")}
          format="webp"
          alt="Bull"
        />
      </div>
    </div>
    <div class="container">
      <div class="space-y-20">
        <Article class="text-white">
         <h2><MdContent content={ t(content.faqTitle) } /></h2>
         <ul class="space-y-2">
          {content.faqList && content.faqList.map((item) => (
            <li class="bg-clip-padding bg-gradient-to-br from-gold/20 border-2 border-gold/20 rounded-xl accordion-item" aria-expanded="false">
              <div class="flex items-center gap-3 px-4 py-3 accordion-trigger">
                { t(item.title) }
                <span class="inline-flex bg-black ml-auto border border-gold/30 rounded-full w-8 h-8 transition accordion-icon">
                  <Icon name="arrow" class="m-auto text-gold" size={18} />
                </span>
              </div>
              <div class="max-h-0 overflow-hidden transition-all accordion-panel">
                <div class="px-4 py-3">{ t(item.content) }</div>
              </div>
            </li>
          ))}
         </ul>
        </Article>
      </div>
    </div>
  </section>
</DefaultLayout>

